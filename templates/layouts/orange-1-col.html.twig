{#
/**
 * @file
 * Orange Layouts: "1 Column" template.
 *
 * Available variables:
 * - content: The content for this layout.
 * - attributes: HTML attributes for the layout <div>.
 *
 * @ingroup themeable
 */
#}
{%
  set classes = [
    'layout-section',
    'layout',
    'layout--1-col',
  ]
%}
{% if content %}
  <div{{ attributes.addClass(classes) }}>
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div {{ region_attributes.content.addClass('layout__region', 'layout__region--content') }}>
            {{ content.content }}
          </div>
        </div>
      </div>
    </div>
  </div>
{% endif %}
